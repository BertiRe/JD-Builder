<?xml version="1.0" encoding="UTF-8"?>
<fieldsgroup>
    <field name="typography" type="typography" label="Typography" description="" default="" responsive="true">
    </field>
    <field type="list" name="type" label="Button Type" description="" default="primary" width="6">
        <option value="primary">JDBUILDER_ELEMENT_PRIMARY_LBL</option>
        <option value="secondary">JDBUILDER_ELEMENT_SECONDARY_LBL</option>
        <option value="success">JDBUILDER_ELEMENT_SUCCESS_LBL</option>
        <option value="danger">JDBUILDER_ELEMENT_DANGER_LBL</option>
        <option value="warning">JDBUILDER_ELEMENT_WARNING_LBL</option>
        <option value="info">JDBUILDER_ELEMENT_INFO_LBL</option>
    </field>
    <field type="list" name="size" label="Button Size" description="" default="" width="6">
        <option value="sm">JDBUILDER_ELEMENT_SM_LBL</option>
        <option value="">JDBUILDER_ELEMENT_MD_LBL</option>
        <option value="lg">JDBUILDER_ELEMENT_LG_LBL</option>
    </field>
    <field type="hover-animations" name="animation" label="Button Animation" description="" default="">
    </field>
    <field name="foreground" type="color" label="Button Text Color" description="" default="" width="6">
    </field>
    <field name="background" type="color" label="Button Background Color" description="" default="" width="6">
    </field>
    <field name="borderColor" type="color" label="Border Color" description="" default="">
    </field>
    <field type="gradient" label="Button Gradient" description="" name="gradient">
    </field>
    <field type="spacer" label="Hover Styling">
    </field>
    <field name="foregroundHover" type="color" label="Button Text Color" description="" default="" width="6">
    </field>
    <field name="backgroundHover" type="color" label="Button Background Color" description="" default="" width="6">
    </field>
    <field name="borderColorHover" type="color" label="Border Color" description="" default="">
    </field>
    <field type="gradient" label="Button Gradient" description="" name="gradientHover">
    </field>
    <field type="spacer"></field>
    <field name="buttonPadding" type="spacing" label="Button Padding" description="" default='{"unit":"px","top":"","lock":1,"left":"","right":"","bottom":""}' responsive="true">
    </field>
    <field type="list" name="borderStyle" label="Border Style" description="" default="solid">
        <option value="none">JDBUILDER_BORDER_NONE</option>
        <option value="solid">JDBUILDER_BORDER_SOLID</option>
        <option value="dashed">JDBUILDER_BORDER_DASHED</option>
        <option value="dotted">JDBUILDER_BORDER_DOTTED</option>
        <option value="double">JDBUILDER_BORDER_DOUBLE</option>
    </field>

    <field type="spacing" name="borderWidth" label="Border Width" description="" showon="params._fgBorderStyle!='none'" default='{"unit":"px","lock":1,"top":"","left":"","right":"","bottom":""}' responsive="true">
    </field>

    <field type="spacing" name="borderRadius" label="Border Radius" description="" default='{"unit":"px","lock":1,"top":"","left":"","right":"","bottom":""}' corners="true" responsive="true">
    </field>
    <field type="boxshadow" name="boxShadow" label="Box Shadow" description="" default="">
    </field>
</fieldsgroup>
